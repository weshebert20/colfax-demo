<article class="archive-view headline-only {{classes}}">
	{{#if sponsored}}
	<span class="sponsored-flag">
		Sponsored
	</span>
	{{/if}}

	<header class="article-info">
		<h6 class="entry-title">
			<a href="#">
				{{title}}
			</a>
		</h6>

		{{#if comments}}
		<div class="disqus-comment-count">
			<a href="#">
				<span>{{comments}}</span>
			</a>
		</div>
		{{/if}}

		{{#if time}}
		<time datetime="{{time.datetime}}">{{time.ago}}</time>
		{{/if}}
	</header>
</article>
